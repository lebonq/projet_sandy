#######################################################################

    # Creation du corps de la page: plage + spectre

#######################################################################
<Spectre>:

    BoxLayout:

    # Plage a gauche
    Label:
        text: 'test0'
        color: (0,0,0)
        halign: 'center'
        valign: 'center'
        
    

<Plage>:
    # Spectre a droite
    BoxLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        canvas:
            Color:
                rgba: 216 / 255., 195 / 255., 88 / 255., 1
            Rectangle:
                pos: self.pos
                size: self.size

#######################################################################

    # Creation de la partie inferieur de la page: description

#######################################################################
<Description>:

    BoxLayout:
        canvas:
            Color:
                rgba: .1, .1, 1, .9
            Line:
                width: 2.
                rectangle: (self.x, self.y, self.width, self.height)
        

        Label:
            text: 'Bla bla bla plastique'
            font_size: '75sp'
            halign: 'left'
            valign: 'top'
            color: (0,0,0)


<AnalyseDesPlages>:
    orientation: 'vertical'
    Label:
        text: 'Analyse des plages'
        color: (0,0,0)
        size_hint_y: 0.5 # de combien on reduit la hauteur de la fenetre pour mettre le texte
    
    BoxLayout:
        orientation: 'horizontal'
        Plage:
        Spectre:
    
    BoxLayout:
